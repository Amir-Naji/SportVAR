<Window x:Class="SportVAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        mc:Ignorable="d" Title="MainWindow" Height="657" Width="800">
    <Grid Height="634" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="511*"/>
            <ColumnDefinition Width="289*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btRecord" Content="Record" HorizontalAlignment="Left" Height="44" Margin="40,585,0,0" VerticalAlignment="Top" Width="97" Click="btRecord_Click" Grid.Column="1"/>
        <Button x:Name="btStop" Content="Stop" HorizontalAlignment="Left" Height="44" Margin="142,585,0,0" VerticalAlignment="Top" Width="97" Click="btStop_Click" Grid.Column="1"/>
        <Button x:Name="btToLive" Content="Live" HorizontalAlignment="Left" Height="44" Margin="439,585,0,0" VerticalAlignment="Top" Width="97" Click="btToLive_Click" Grid.ColumnSpan="2"/>
        <Image x:Name="liveImage" Stretch="Uniform" Margin="10,10,10,76" Grid.ColumnSpan="2"/>
        <Slider x:Name="frameSlider"
                Minimum="0"
                ValueChanged="frameSlider_ValueChanged"
                PreviewMouseDown="Slider_PreviewMouseDown"
                PreviewMouseUp="Slider_PreviewMouseUp"
                Margin="10,560,10,0" Grid.ColumnSpan="2" Height="20" VerticalAlignment="Top"/>
    </Grid>
</Window>
